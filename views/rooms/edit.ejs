<section>
  <h1>EDIT ROOM</h1>
  <form action="/rooms/<%= room._id %>?_method=PUT" method="POST">
    <label>
      Name:
      <input 
        type="text" 
        name="name" 
        value="<%= room.name %>"
        autocomplete="off"
      >
    </label>
    <label>
      Price:
      <input 
        type="text" 
        price="price" 
        value="<%= room.price %>"
        autocomplete="off"
      >
    </label>
    <label>
      Reserved
      <input 
        type="checkbox" 
        name="reserved"
        <%= room.reserved ? "checked" : "" %> 
      >
    </label>
