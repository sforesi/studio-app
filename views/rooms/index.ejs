<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>
<main>
  <h1>ROOMS</h1>
  <table>
    <thead>
      <tr>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
      <% rooms.forEach(r => { %>
        <tr>
          <td><%= r.name %></td>
          <td>
            <a href="/rooms/<%= r._id %> "><i class="fas fa-info-circle"></i></i></a>
          </td>
        </tr>
        <% }) %>  
      </tbody>
    </table><br>
    <section>
      <a href="/rooms/new"><i class="fas fa-sliders-h"></i><i class="fas fa-plus-circle"></i></a>
    </section>
    
</main>

<%- include('../partials/footer') %>

