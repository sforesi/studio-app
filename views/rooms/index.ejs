<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>
<main>
  <h1>ROOMS</h1>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Reserved</th>
        <th>Smoking</th>
      </tr>
    </thead>
    <tbody>
      <% rooms.forEach(r => { %>
        <tr>
          <td><%= r.name %></td>
          <td><%= r.reserved %></td>
          <td><%= r.smoking %></td>
          <td>
            <a href="/rooms/<%= r._id %> ">Details</a>
          </td>
        </tr>
        <% }) %>  
      </tbody>
    </table>
</main>

<%- include('../partials/footer') %>